{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Basset",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "path": {
        "all": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "exists": true,
        "scope": [
          "$APPLOCALDATA/inputTxtFiles",
          "$APPLOCALDATA/inputTxtFiles/*"
        ]
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": ["**"]
      },
      "notification": {
        "all": true
      },
      "all": false,
      "dialog": {
        "open": true
      },
      "shell": {
        "all": false,
        "open": ".",
        "sidecar": true,
        "execute": true,
        "scope": [
          { "name": "bin/ffmpeg", "args": true, "sidecar": true },
          { "name": "bin/ffprobe", "args": true, "sidecar": true }
        ]
      }
    },
    "windows": [
      {
        "title": "بسيط - Basset",
        "width": 800,
        "height": 600,
        "minWidth": 650,
        "minHeight": 450
      }
    ],
    "bundle": {
      "externalBin": ["bin/ffmpeg", "bin/ffprobe"],
      "active": true,
      "targets": "all",
      "identifier": "com.basset.app",
      "category": "Utility",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "appimage": {
        "bundleMediaFramework": true
      },
      "windows": {
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    }
  }
}
